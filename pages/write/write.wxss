/* pages/write/write.wxss */
page {
  height: 100%;
  width: 750rpx;
  flex-direction: column;
  display: flex;
  justify-content: left;
  align-items: center
}

.write_title text {
  font-size: 40pt;
  text-shadow: 0px 0px 11px rgb(255, 255, 255);
  font-family: "Comic Sans MS", cursive, sans-serif;
  color: rgba(255, 254, 199, 0.658);
}

.input_area {
  width: 80%;
  border-radius: 3px;
  background-color: rgb(80, 80, 80);
  margin-top: 10px;
  display: flex;
}

#content_frame {
  height: 30%;
}

.weui-input {
  width: 100%;
  margin: 10px;
  font-size: 15px;
  text-align: left;
  color: rgb(255, 255, 255);
}