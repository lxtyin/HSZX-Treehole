/* pages/loin.wxss */

page {
  height: 100%;
  width: 750rpx;
  flex-direction: column;
  display: flex;
  justify-content: left;
  align-items: center
}

.title text {
  font-size: 50pt;
  text-shadow: 0px 0px 11px rgb(255, 255, 255);
  font-family: "Comic Sans MS", cursive, sans-serif;
  color: rgba(255, 254, 199, 0.658);
}

.hint {
  font-size: 14px;
  color: rgb(168, 168, 154);
  font-weight: bold;
  text-align: center;
  line-height: 25px;
}

.line {
  width: 70%;
  margin-top: 15px;
  background-color: rgb(44, 44, 44);
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.button_text, input {
  font-size: 14px;
  text-align: center;
  color: rgb(207, 207, 207);
}

#button {
  height: 25px;
  background-color: rgb(70, 70, 70);
}

#visit {
  height: 25px;
  background-color: rgb(58, 80, 75);
  position: fixed;
  bottom: 10%;
}
