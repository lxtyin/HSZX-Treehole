/* pages/hole/hole.wxss */
page {
  height: 100%;
  width: 750rpx;
  flex-direction: column;
  display: flex;
  justify-content: left;
  align-items: center
}

.hole_title text {
  font-size: 50pt;
  text-shadow: 0px 0px 11px rgb(255, 255, 255);
  font-family: "Comic Sans MS", cursive, sans-serif;
  color: rgba(255, 254, 199, 0.658);
}

.paster {
  width: 680rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  border: solid;
  border-color: rgb(44, 44, 44);
  border-radius: 10px;
  background-color:rgb(44, 44, 44);
  margin-top: 4%;
}

.head_bar, .content_bar, .bottom_bar {
  margin-top: 10px;
  margin-left: 10px;
}

.title {
  font-weight: bold;
  font-size: 14px;
}

.tag {
  color: rgba(255, 255, 169, 0.692);
  font-weight: bold;
  text-align: center;
  font-size: 14px;
}

.content {
  font-size: 12px;
  text-align: left;
  text-indent: 1em;
  color: rgb(116, 116, 116);
  overflow: hidden;
  display: -webkit-box;
  text-overflow: ellipsis;
  -webkit-line-clamp: 2;  /*要显示的行数*/
  -webkit-box-orient: vertical;
}

.time {
  font-size: 13px;
  text-align: center;
  color: rgb(116, 116, 116);
}

.icon_bar {
  margin-right: 5px;
  margin-bottom: 10px;
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
}

.bottom_bar {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.paster .icon {
  margin-right: 10px;
}