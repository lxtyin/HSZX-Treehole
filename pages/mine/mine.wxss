
.container {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
}

.head_bar{
  margin-top: 10%;
  width: 100px;
  height: 100px;
}
.head_bar image {
  width: 100%;
  height: 100%;
  border-radius: 3000px;
  border: solid;
  border-color: var(--main2-color);
}

.name_bar input {
  margin-top: 0.5em;
  height: 2em;
  font-size: 30px;
  font-weight: bold;
  color: var(--main-color);
  text-align: center;
}

.confirm_bar icon{
  margin-top: 10px;
  font-size: 30px;
}

.line_bar {
  margin-top: 1em;
  width: 100%;
}

.line text {
  margin: 5px;
}

.line {
  margin-left: 15%;
  margin-top: 20px;
  width: 100%;
  background-color: var(--main-color);
}

#switchaccount {
  margin-top: 40px;
  background-color: var(--main4-color);
}
