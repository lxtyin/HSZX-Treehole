/* components/addtag/addtag.wxss */

.dom {
  height: 100%;
  width: 100%;
  background-color: rgba(0, 0, 0, 0.7);
  position: fixed;
  z-index: 10; /*top*/
}

.dialog {
  width: 70%;
  position:fixed;
  background-color: var(--back2-color);
  border: solid var(--main2-color);
  border-radius: 10px;
  top: 10%;
  left: 15%;
  display: flex;
  flex-direction: column;
}

.hint_line {
  margin-top: 10px;
  display: flex;
  flex-direction: column;
}

.hint_text {
  text-align: center;
  font-size: 10px;
  color: var(--text-dim-color);
}

.tag_area {
  display: flex;
  flex-direction: row;
  justify-content: center;
  flex-wrap: wrap;
  margin-top: 10px;
}

.tag {
  border: solid var(--main2-color);
  border-radius: 15px;
  margin: 5px;
  display: flex;
  justify-content: row;
  align-items: baseline;
}

.tag text, input {
  margin: 7px;
  font-size: 14px;
  color: var(--main-color);
  font-weight: bold;
}
.tag input {
  margin-left: 0px;
}

.input_line {
  margin: 10px;
}
