/* components/head_bar/head_bar.wxss */

.head_bar {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: flex-end;
}
.head_bar .head-r {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  margin-left: 3px;
}

/* 用户名 */
.user_name {
  font-size: 15px;
  font-weight: bold;
  color: var(--main-color);
}

/* 头像 */
.avatar {
  width: 30px;
  height: 30px;
  margin: 5px;
  border-radius: 300px;
}

.time {
  font-size: 13px;
  color: var(--text-dim-color);
}