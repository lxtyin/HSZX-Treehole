
.container {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
}

.head_bar{
  margin-top: 10%;
  width: 100px;
  height: 100px;
}
.head_bar image {
  width: 100%;
  height: 100%;
  border-radius: 3000px;
  border: solid;
  border-color: rgba(255, 255, 255, 0.493);
}

.name_bar input {
  margin-top: 0.5em;
  height: 2em;
  font-size: 30px;
  font-weight: bold;
  color: bisque;
  text-align: center;
}

.confirm_bar icon{
  margin-top: 10px;
  font-size: 30px;
}

